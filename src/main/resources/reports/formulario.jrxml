                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="Formulario" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20" uuid="abcd1234-5678-90ab-cdef-1234567890ab">

    <parameter name="nombre" class="java.lang.String"/>

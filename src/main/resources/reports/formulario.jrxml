                <text><![CDATA[Formulario de Solicitud]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="85" width="555" height="1"/>
            </line>

            <textField>
                <reportElement x="0" y="70" width="555" height="15"/>
                <textElement textAlignment="Right">
                    <font size="10" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado el: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <detail>
        <band height="120">

            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Nombre:]]></text>
            </staticText>
            <textField>
                <reportElement x="110" y="0" width="445" height="20"/>
                <textFieldExpression><![CDATA[$P{nombre}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="25" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Email:]]></text>
            </staticText>
            <textField>
                <reportElement x="110" y="25" width="445" height="20"/>
                <textFieldExpression><![CDATA[$P{email}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="50" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Comentario:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="110" y="50" width="445" height="60"/>
                <textElement verticalAlignment="Top"/>
                <textFieldExpression><![CDATA[$P{comentario}]]></textFieldExpression>
            </textField>

        </band>
    </detail>
</jasperReport>
